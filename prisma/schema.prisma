generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model employer {
  id Int @id @default(autoincrement())
  name String @default("")
  email String @default("")
}


model joblistings {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?
  requirements String?
  salary       String?
  location     String?
   applications Application[]
   
}


model seekers {
  id Int @id @default(autoincrement())
  name String
  email String
   applications Application[]
  
}

model Application {
  id            Int        @id @default(autoincrement())
  seekerId      Int
  jobListingId  Int
  resume        String
  coverLetter   String
  submittedAt   DateTime   @default(now())

  seekers       seekers      @relation(fields: [seekerId], references: [id])
 joblistings    joblistings  @relation(fields: [jobListingId], references: [id])
}